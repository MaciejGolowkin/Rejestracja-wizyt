<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.maciek.rejestracjawizyt.MainActivity">

    <TextView
        android:id="@+id/Show_City"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Umów wizytę"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:textSize="24sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wpisz pesel pacjenta dla którego  chcesz umówić wizytę"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="50dp"
        />

    <EditText
        android:id="@+id/Write_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Podaj numer pesel"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:singleLine="false"
        android:layout_marginTop="80dp"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_healing_black_24dp"
        android:id="@+id/Picture"
        />

    <Button
        android:id="@+id/Pokaz_Liste"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp"
        android:backgroundTint="@color/colorAccent"
        android:text="Wybierz lekarza"
        android:textColor="@android:color/white" />
</RelativeLayout>
